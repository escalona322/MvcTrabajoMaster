<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcTrabajoMaster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand mx-5" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://storagetajamarjalt.blob.core.windows.net/torneos/logo.png" height="50" width="50"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item mx-5">
                            <a class="nav-link text-dark mx-3" asp-area=""
                               asp-controller="Torneos"
                               asp-action="ListaTorneos">
                                <img src="https://storagetajamarjalt.blob.core.windows.net/torneos/logotorneos-removebg-preview.png" height="75" width="75" />
                            </a>
                        </li>
                        <li class="nav-item mx-5">
                            <a class="nav-link text-dark mx-3" asp-area=""
                               asp-controller="Jugadores"
                               asp-action="ListaJugadores">
                                <img src="https://storagetajamarjalt.blob.core.windows.net/torneos/playerslogo-removebg-preview.png" height="75" width="120" />
                            </a>
                        </li>
                        <li class="nav-item mx-5">
                            <a class="nav-link text-dark mx-3" asp-area=""
                               asp-controller="Jugadores"
                               asp-action="MiPerfil">
                                <img src="https://storagetajamarjalt.blob.core.windows.net/torneos/profile-removebg-preview.png" height="75" width="95" />
                            </a>
                        </li>
                        @if (Context.User.Identity.IsAuthenticated == true)
                        {
                            @if (Context.User.FindFirst(ClaimTypes.Role).Value == "Admin")
                            {
                                <li class="nav-item mx-5">
                                    <a asp-controller="Home"
                                       asp-action="VistaAdmin">
                                        <img src="https://storagetajamarjalt.blob.core.windows.net/torneos/admin-removebg-preview.png" height="75" width="75" />

                                    </a>
                                </li>
                            }                      
                        }
                        @if (Context.User.Identity.IsAuthenticated == true)
                        {
                            <li class="nav-item mx-5">
                                <a class="nav-link text-dark mx-3" asp-area=""
                                   asp-controller="Managed"
                                   asp-action="LogOut">
                                    <img src="https://storagetajamarjalt.blob.core.windows.net/torneos/logout-removebg-preview.png" height="75" width="95" />
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MvcTrabajoMaster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
